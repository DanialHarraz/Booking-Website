generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Booking {
  id                   Int       @id @default(autoincrement())
  fullName             String
  phone                String
  email                String?
  bookingType          String
  date                 String
  time                 String
  pickup               String
  destination          String?
  duration             String?
  returnDate           String?
  returnTime           String?
  additionalStops      Boolean   @default(false)
  additionalStopsInfo  String?
  passengers           Int
  luggage              String?
  depositAcknowledged  Boolean
  cancellationPolicy   Boolean
  paymentScreenshot    String?   // store file path or URL
  additionalNotes      String?
  status               String    @default("pending")
  createdAt            DateTime  @default(now())
}

