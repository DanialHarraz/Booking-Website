generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("admin") // could be admin or customer
  createdAt DateTime @default(now())
}

model Booking {
  id          Int      @id @default(autoincrement())
  fullName    String
  phone       String
  email       String?
  date        String
  time        String
  pickup      String
  destination String?
  preferences String?
  status      String   @default("pending") // pending, confirmed, completed, cancelled
  createdAt   DateTime @default(now())
}
